@page "/"
@inject NavigationManager Navigation

<h3>Welcome to LuluLuxe!</h3>
<p>Your ultimate beauty and salon service booking platform.</p>

<!-- Button to navigate to the appointments page -->
<button class="btn btn-primary" @onclick="NavigateToAppointments">Book an Appointment</button>

@code {
    private void NavigateToAppointments()
    {
        Navigation.NavigateTo("/appointments");
    }
}
